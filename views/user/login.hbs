<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/userStyle.css">
    <style>
/* Resetting some default browser styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Background styling */
body {
    font-family: 'Arial', sans-serif;
    background:#060270;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Styling the container for the login form */
.login-container {
    background-color: #fff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
    text-align: center;
}

/* Title Styling */
.form-title {
    font-size: 28px;
    margin-bottom: 30px;
    color: black;
}
.form-label{
    color: black;
    padding-right: 300px;
}

/* Input fields styling */
input[type="email"], input[type="password"] {
    border-radius: 5px;
    border: 1px solid #ddd;
    padding: 12px;
    width: 100%;
    margin-bottom: 20px;
    font-size: 16px;
}

/* Button styling */
button[type="submit"] {
    background-color: #2575fc;
    color: white;
    padding: 12px;
    border: none;
    border-radius: 5px;
    width: 100%;
    font-size: 18px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button[type="submit"]:hover {
    background-color:#0056b3;
}

/* Error message styling */
.error-msg {
    font-size: 16px;
    color: #ff4747;
    margin-bottom: 20px;
}

/* Link Styling */
a {
    color: ;
    text-decoration: none;
    font-weight: bold;
}

a:hover {
    text-decoration: underline;
}

/* Optional background pattern or decoration */
.background-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('https://www.transparenttextures.com/patterns/white-dots.png');
    opacity: 0.1;
}

/* Media query for responsiveness */
@media (max-width: 480px) {
    .login-container {
        padding: 20px;
        width: 90%;
    }

    .form-title {
        font-size: 24px;
    }

    input[type="email"], input[type="password"] {
        font-size: 14px;
    }

    button[type="submit"] {
        font-size: 16px;
    }
}


    </style>
</head>
<body>
    <div class="background-pattern"></div>
    <div class="login-container">
        <h3 class="form-title">Login</h3>
        <form action="/user/login" method="POST" >

          <h4 style="color: red;" id="message" class="error-msg">{{message}}</h4> <!-- For error messages -->
          
            <div class="mb-3">
                <label for="email"  class="form-label">Email </label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email">
            </div>
            <div class="mb-3">
                <label for="password"   class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" r>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="text-center mt-2">
                <span style="color:black">Don't have an account? <a href="/user/register" class="text-decoration-none">Sign up</a></span>
            </div>
        </form>
    </div>

<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">


    <script>
        
        function formValidate(event) {
            event.preventDefault(); // Prevent default form submission

            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value.trim();

            if (email === "" || password === "") {
                // Display Toastify notification for missing fields
                Toastify({
                    text: "Fields required!!!",
                    duration: 3000,
                    gravity: "top", // Notification position
                    position: "center",
                    style: {
                        background: "linear-gradient(to right, #ff5f6d, #ffc371)",
                        color: "white",
                    },
                }).showToast();
                return false; // Prevent form submission
            }

            // Allow form submission if validation passes
            event.target.submit();
            return true;
        }

        //
        {{#if msg}}
        Toastify({
            text: "{{msg}}",  
            duration: 5000,
            gravity: "top",
            position: "center",
            style: {
                background: "linear-gradient(to right, #ff5f6d, #ffc371)",
                color: "white",
            },
        }).showToast();
        {{/if}}
 
    </script>
</body>
</html>